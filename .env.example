# AgroConecta - Variables de entorno
# Copiar este archivo como .env y configurar con valores reales

# Configuración de Base de Datos
DB_HOST=localhost
DB_NAME=agroconecta_db
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# Configuración del Sistema
ENVIRONMENT=development
DEBUG_MODE=true
SITE_URL=http://localhost/AgroConecta

# Configuración de Seguridad
SESSION_TIMEOUT=3600
CSRF_TOKEN_EXPIRE=1800

# Configuración de Correo (PHPMailer)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_EMAIL=agroconecta@gmail.com
MAIL_FROM_NAME=AgroConecta

# Configuración de Mercado Pago
MP_ACCESS_TOKEN=
MP_PUBLIC_KEY=
MP_SANDBOX_MODE=true

# Configuraciones adicionales
DEFAULT_TIMEZONE=America/Mexico_City
DEFAULT_LANGUAGE=es
ITEMS_PER_PAGE=12
MAX_FILE_SIZE=5242880